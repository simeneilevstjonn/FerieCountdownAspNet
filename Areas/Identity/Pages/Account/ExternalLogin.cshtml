@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrer deg";
}

<h1>@ViewData["Title"]</h1>
<h4>Assosier din @Model.LoginProvider-bruker.</h4>
<hr />

<p class="text-info">
    Du har autentisert med <strong>@Model.LoginProvider</strong>.
    Vennligst skriv inn en e-postadresse for å fullrøre registeringen.
    Du vil få tilsendt en verfifiseringslink. Du må verifisere brukeren din for å kunne logge inn igjen.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Registrer deg</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
