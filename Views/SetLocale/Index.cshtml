@model SetLocaleViewModel
@{
    Layout = "_SetLocaleLayout";
    ViewData["title"] = "Velg ditt sted";

    string schoollink = "/SetLocale/School";
    if (!String.IsNullOrEmpty(Model.RedirectUrl)) schoollink += "?redirecturl=" + Model.RedirectUrl;

    string worklink = "/SetLocale/Work";
    if (!String.IsNullOrEmpty(Model.RedirectUrl)) worklink += "?redirecturl=" + Model.RedirectUrl;
}

<p class="display-3 hide-mob">Går du på skole eller jobb?</p>
<h2 class="hide-large">Går du på skole eller jobb?</h2>
<a href="@schoollink" class="btn w3-red w-100 text-left gigabutton gigabutton-top px-2"><i class="fas fa-graduation-cap"></i> Skole</a>
<a href="@worklink" class="btn w3-blue w-100 text-left gigabutton px-2"><i class="fas fa-briefcase"></i> Jobb</a>

